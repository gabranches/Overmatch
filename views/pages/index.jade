doctype html
html
    head
        meta(charset="utf-8")
        title OverMatch: Community-Driven Overwatch Stats
        meta(description="OverMatch is a community-driven meta-game for Blizzard's Overwatch.")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/stylesheets/rangeslider.css")
        link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans")
        link(rel="stylesheet", href="/stylesheets/main.css")
        link(rel="icon" href="/favicon.ico")

    body
        .container
            .row
                #header.col-xs-12.text-center
                    #status-div
                        #active-count
                            p Active users: 
                    #title.row 
                        p OverMatch
                    #subtitle.row
                        p Community-Driven Overwatch Stats

            #loading-div.row.text-center.shadow-top.soft-bg
                p Getting next match
            #loading-div-bottom.shadow-bottom.soft-bg

            #vs-game-div.row.soft-bg
                .col-xs-12.text-center
                    .row.matchup-title.shadow-top.soft-bg
                        #vs-title.col-xs-12
                    .row.matchup-game.soft-bg
                        .col-xs-0.col-md-1
                        #vs-hero.col-xs-4.col-md-3
                            .row.text-center
                                #vs-hero-img.char-img
                            .row
                                #vs-hero-name.col-xs-12
                            
                        .col-xs-4.col-md-4
                            .row
                                #vs-slide-val.slide-num
                            .row
                                #vs-slide-quote.col-xs-12.slide-quote
                            .row
                                #vs-slide-div.col-xs-12
                                    input(id="vs-slider" type="range" min="0" max="10" step="1")
                            .row
                                #vs-next.next-btn-div
                                    button(class="btn" id="vs-next") Next
                        #vs-opponent.col-xs-4.col-md-3
                            .row
                                #vs-opponent-img.char-img
                            .row
                                #vs-opponent-name.col-xs-12
                    .row.matchup-slider.shadow-bottom.soft-bg

            #team-game-div.row
                .col-xs-12.text-center
                    .row.matchup-title.shadow-top.soft-bg
                        #team-title.col-xs-12
                    .row.matchup-game.soft-bg
                        .col-xs-0.col-md-1
                        #team-hero.col-xs-4.col-md-3
                            .row.text-center
                                #team-hero-img.char-img
                            .row
                                #team-hero-name.col-xs-12
                            
                        .col-xs-4.col-md-4
                            .row
                                #team-slide-val.slide-num
                            .row
                                #team-slide-quote.col-xs-12.slide-quote
                            .row
                                #team-slide-div
                                    input(id="team-slider" type="range" min="0" max="10" step="1")
                            .row
                                #team-next.next-btn-div
                                    button(class="btn" id="team-next") Next
                            
                        #team-friend.col-xs-4.col-md-3
                            .row
                                #team-friend-img.char-img
                            .row
                                #team-friend-name.col-xs-12
                    .row.matchup-slider.shadow-bottom.soft-bg

            #solo-game-div.row
                .col-xs-12.text-center
                    .row.matchup-title.shadow-top.soft-bg
                        #solo-title.col-xs-12
                    .row.matchup-game.soft-bg
                        .col-xs-0.col-md-1
                        #solo-hero.col-xs-4.col-md-3
                            .row.text-center
                                #solo-hero-img.char-img
                            .row
                                #solo-hero-name.col-xs-12
                            
                        .col-xs-4.col-md-4
                            .row
                                #solo-slide-val.slide-num
                            .row
                                #solo-slide-quote.col-xs-12.slide-quote
                            .row
                                #solo-slide-div.col-xs-12
                                    input(id="solo-slider" type="range" min="0" max="10" step="1")
                            .row
                                #solo-next.next-btn-div
                                    button(class="btn" id="solo-next") Next

                        #solo-map.col-xs-4.col-md-3
                            .row
                                #solo-map-img.map-img
                            .row
                                #solo-map-name.col-xs-12
                    .row.matchup-slider.shadow-bottom.soft-bg

            #menu.row.text-center
                #hero-stats-btn.col-xs-4.menu-option.bigmenu-selected
                    p Hero Stats
                #team-counter-btn.col-xs-4.menu-option
                    p Enemy Team Counter
                #friendly-team-btn.col-xs-4.menu-option
                    p Friendly Team Pick

            #pick-hero-before.row.shadow-top

            #pick-hero.row.text-center
                each hero in heroes
                    .pick-hero-div
                        .pick-hero-thumb(title="#{hero.name}" data-id="#{hero.id}")
                            img(src="/images/thumbnails/#{hero.tag}.png")
                        .pick-hero-name

            #hero-stats-title.row
                .col-xs-3
                #hero-stats-name.col-xs-6.text-center

            #hero-stats.row.text-center.soft-bg.shadow-top
            
                #hero-stats-menu.row

                    .col-xs-12.text-center
                        #matchups-btn.menu-btn
                            p MATCHUPS
                        #counters-btn.menu-btn
                            p COUNTERS
                        #teammates-btn.menu-btn
                            p TEAMMATES
                        #maps-btn.menu-btn
                            p MAPS
  
                #beta.row.text-center
                    p Overmatch currently in Beta. Results may be inaccurate until launch. Thank you for helping! 
                .row
                    .col-xs-0.col-md-2
                    #hero-stats-table.col-xs-12.col-md-8

            #pick-hero-after.row.shadow-bottom
            
            #copyright.row.text-center
                .col-xs-12
                    p Â©2015 Blizzard Entertainment, Inc. All rights reserved. Overwatch is a trademark of Blizzard Entertainment, Inc.


        script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
        script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
        script(src="//cdn.socket.io/socket.io-1.2.0.js")
        script(src="js/globals.js")        
        script(src="js/data/heroes.js")        
        script(src="js/data/maps.js")        
        script(src="js/socket.js")
        script(src="js/libs/rangeslider.min.js")
        script(src="js/game/opponents_game.js")
        script(src="js/game/maps_game.js")
        script(src="js/game/friends_game.js")
        script(src="js/stats.js")
        script(src="js/main.js")
